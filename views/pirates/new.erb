<form method="POST" action="/pirates">
  <h1>Pirate</h1>
  <label>Pirate Name</label><input type="text" name="pirate[name]">
  <label>Pirate Weight</label><input type="text" name="pirate[weight]">
  <label>Pirate Height</label><input type="text" name="pirate[height]">
  <h1>Ship 1</h1>
