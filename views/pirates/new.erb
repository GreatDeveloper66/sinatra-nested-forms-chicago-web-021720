  <input id="ship_type_1" name="pirate[ships][0][type]">
  <label>First Ship Booty</label>
  <input id="ship_booty_1" name="pirate[ships][0][booty]">
  <h2>Ship2</h2>
  <label>Second Ship Name</label>
  <input id="ship_name_2" name="pirate[ships][1][name]">
  <label>Second Ship Type</label>
  <input id="ship_type_2" name="pirate[ships][1][type]">
  <label>Second Ship Booty</label>
  <input id="ship_booty_2" name="pirate[ships][1][booty]">

